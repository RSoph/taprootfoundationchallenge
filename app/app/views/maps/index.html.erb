<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<p>Check out the events happening in <%=@location%>!</p>

<!-- Google Map -->
<div style='width: 100%;'>
  <div id="map" style='width: 100%; height: 400px;'></div>
		<script type="text/javascript">

			handler = Gmaps.build('Google');
			handler.buildMap({
			    provider: {
			      disableDefaultUI: true
			      // pass in other Google Maps API options here
			    },
			    internal: {
			      id: 'map'
			    }
			  },
			  function(){
			    markers = handler.addMarkers(<%=raw @locations_hash.to_json %>);
			    handler.bounds.extendWith(markers);
			    handler.fitMapToBounds();
			  }
			);
		</script>
	</div>
</div>
<!-- /Google Map -->



<% if @nearby_events %>
	<ul>
	<p>Here's what's happening this week:</p>
	 <%@nearby_events.each do |event|%>
	<li>
	<a href=<%=event["url"]%>><%= event["title"]%></a>
	<br>
	<a href=<%=event["venue"]["website"]%>><%= event["venue"]["name"]%></a>
	<br>
	<%=event["venue"]["location"]["street"]%>
	<br>
	<%=event["venue"]["location"]["city"]%>
	<br>
	<%= event["startDate"]%>
	<br>
	<%if event["tickets"] != "\n  "%>
	 <a href=<%=event["tickets"]%>>Tickets!</a>
	<%end%>
	</li>
<%end%>
</ul>
<%else%>
	No nearby events!
<%end%>



